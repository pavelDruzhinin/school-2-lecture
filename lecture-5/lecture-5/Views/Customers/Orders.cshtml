@model lecture_5.Models.Customer

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

<p>
    <a href="/Customer/@(Model.Id)/Products/">Сделать новый заказ</a>
</p>
<table class="table">
    <tr>
        <th>
           Номер заказа
        </th>
        <th>
            Сумма
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Orders) {
    <tr>
        <td>
            Заказ №@Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @item.OrderPositions.Sum(x => x.Product.Price * x.Count)
        </td>
        <td>
            
        </td>
    </tr>
}

</table>
